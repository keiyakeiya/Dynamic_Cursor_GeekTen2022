{
  "manifest_version": 3,
  "name": "Dynamic Cursor",
  "version": "1",
  "action": {
    "default_title": "Dynamic Cursor",
    "default_popup": "./popup/popup.html"
  },
  "options_page": "./options/options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["mainScript.js"],
      "css": ["mainStyle.css"]
    }
  ]
}
