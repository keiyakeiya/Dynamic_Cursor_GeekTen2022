{
  "manifest_version": 3,
  "name": "ダイナミックカーソル",
  "version": "1.0.0",
  "action": {
    "default_title": "Dynamic Cursor",
    "default_popup": "./popup/popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "./options/options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["mainScript.js"],
      "css": ["mainStyle.css"]
    }
  ],
  "icons": {
    "16": "icon/cursorIcon16_trans.png",
    "48": "icon/cursorIcon48_trans.png",
    "128": "icon/cursorIcon128_trans.png"
  }
}
